{
  "name": "gl-draw",
  "version": "0.0.0",
  "description": "A drawing component for Mapbox GL JS",
  "homepage": "https://github.com/mapbox/gl-draw",
  "author": "mapbox",
  "license": "ISC",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "npm run lint && prova test/test.js",
    "lint": "eslint --no-eslintrc -c .eslintrc index.js src",
    "build": "NODE_ENV=production browserify index.js | uglifyjs -c -m > dist/mapboxgl.draw.js",
    "start": "budo index.js --serve=dist/mapboxgl.draw.js --live -d | bistre"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mapbox/gl-draw.git"
  },
  "keywords": [
    "webgl",
    "mapbox",
    "draw",
    "drawing"
  ],
  "bugs": {
    "url": "https://github.com/mapbox/gl-draw/issues"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.7",
    "babelify": "^6.1.1",
    "bistre": "^1.0.1",
    "browserify": "^9.0.3",
    "budo": "^4.0.0",
    "eslint": "^0.21.2",
    "prova": "^2.1.2",
    "uglify-js": "^2.4.23"
  },
  "dependencies": {
    "hat": "0.0.3",
    "immutable": "^3.7.3",
    "xtend": "^4.0.0"
  }
}
