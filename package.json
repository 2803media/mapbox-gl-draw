{
  "name": "gl-draw",
  "version": "0.0.0",
  "description": "A drawing component for Mapbox GL JS",
  "main": "index.js",
  "scripts": {
    "test": "eslint src/*.js",
    "build": "NODE_ENV=production browserify index.js | uglifyjs -c -m > dist/mapboxgl.draw.js",
    "start": "watchify -v -d index.js -o dist/mapboxgl.draw.js & serve"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mapbox/gl-draw.git"
  },
  "keywords": [
    "webgl",
    "mapbox",
    "draw",
    "drawing"
  ],
  "author": "mapbox",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/mapbox/gl-draw/issues"
  },
  "homepage": "https://github.com/mapbox/gl-draw",
  "devDependencies": {
    "browserify": "^9.0.3",
    "eslint": "^0.16.2",
    "serve": "^1.4.0",
    "uglify-js": "^2.4.20",
    "watchify": "^2.4.0"
  },
  "dependencies": {
    "xtend": "^4.0.0"
  }
}
